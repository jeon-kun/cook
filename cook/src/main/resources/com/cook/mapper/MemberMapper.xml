<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.cook.mapper.MemberMapper">
  
  
    <insert id="memberInsert" parameterType="com.cook.model.MemberVO">
        <selectKey keyProperty="mno" order="BEFORE"
                   resultType="int">
            select mno_seq.nextval from dual
        </selectKey>
        insert into member
        values (#{mno},#{email}, #{pass}, #{address},'ROLE_USER', sysdate)
    </insert>
    
      	<!-- 아이디 중복검사 -->
  	<select id="emailCheck" resultType="int">
  		select count(*) from member where email = #{email}
  	</select>
  	
      <!-- 로그인 -->
     <select id="memberLogin" resultType="com.cook.model.MemberVO">
         select email, authority,pass from member where email = #{email}
      </select>
  </mapper>